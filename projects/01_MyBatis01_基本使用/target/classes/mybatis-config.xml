<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <!--  其他设置  -->
    <settings>
        <!-- 是否开启驼峰命名自动映射，即从经典数据库列名 A_COLUMN 映射到经典 Java 属性名 aColumn。-->
        <setting name="mapUnderscoreToCamelCase" value="true"/>

        <!--  打印日志信息  -->
<!--        <setting name="logImpl" value="STDOUT_LOGGING" />-->
    </settings>

    <!--  别名  -->
    <typeAliases>
<!--        <typeAlias type="com.zxf.bean.Skill" alias="skill" />-->

<!--    连接池别名    -->
        <typeAlias type="com.zxf.common.DruidDataSourceFactory" alias="DRUID" />

<!--    这个包下的所有类，都会起一个别名，全类名的最后一个单词  -->
        <package name="com.zxf.bean"/>
    </typeAliases>

<!--  pagehelper拦截器  -->
    <plugins>
        <plugin interceptor="com.github.pagehelper.PageInterceptor">
            <!--  分页合理化 -->
            <property name="reasonable" value="true"/>
        </plugin>
    </plugins>

    <environments default="development">
        <!--  开发环境(调试阶段)  -->
        <environment id="development">
            <!--  采取JDBC的事物管理方法  -->
            <transactionManager type="JDBC"></transactionManager>
            <!--  采取连接池的方式连接  -->
            <dataSource type="DRUID">
                <property name="driverClassName" value="com.mysql.jdbc.Driver"/>
                <property name="url" value="jdbc:mysql://localhost:3306/test_mybatis"/>
                <property name="username" value="root"/>
                <property name="password" value="root"/>
                <property name="initialSize" value="5"/>
                <property name="maxActive" value="10"/>
                <property name="maxWait" value="5000"/>
            </dataSource>
        </environment>

        <!--  开发环境(调试阶段)  使用自带的连接池  -->
        <environment id="development2">
            <!--  采取JDBC的事物管理方法  -->
            <transactionManager type="JDBC"></transactionManager>
            <!--  采取连接池的方式连接  -->
            <dataSource type="POOLED">
                <property name="driver" value="com.mysql.jdbc.Driver"/>
                <property name="url" value="jdbc:mysql://localhost:3306/test_mybatis"/>
                <property name="username" value="root"/>
                <property name="password" value="root"/>
            </dataSource>
        </environment>

        <!--  生产环境(发布阶段)  -->
        <environment id="production">
            <!--  采取JDBC的事物管理方法  -->
            <transactionManager type="JDBC"></transactionManager>
            <!--  采取连接池的方式连接  -->
            <dataSource type="POOLED">
                <property name="driver" value="com.mysql.jdbc.Driver"/>
                <property name="url" value="jdbc:mysql://localhost:3306/test_mybatis"/>
                <property name="username" value="root"/>
                <property name="password" value="root"/>
            </dataSource>
        </environment>
    </environments>

    <!-- 映射文件 -->
    <mappers>
        <mapper resource="mapper/skill.xml"></mapper>
        <mapper resource="mapper/experience.xml"></mapper>
    </mappers>

</configuration>