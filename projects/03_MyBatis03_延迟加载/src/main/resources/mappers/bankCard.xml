<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="bankCard">

    <sql id="sqlListAll">
        SELECT
	        bc.*,
	        p.id p_id,
	        p.name p_name
        FROM
	        bank_card bc
        JOIN person p ON p.id = bc.person_id
    </sql>

    <resultMap id="rmList" type="com.zxf.bean.BankCard">
        <id property="id" column="id" />
        <result property="no" column="no" />
        <result property="amout" column="amout" />
        <association property="person" javaType="com.zxf.bean.Person">
            <result property="id" column="p_id" />
            <result property="name" column="p_name" />
        </association>
    </resultMap>

    <select id="list" resultMap="rmList">
        <include refid="sqlListAll" />
    </select>

    <select id="listByPerson" parameterType="int" resultType="com.zxf.bean.BankCard">
        SELECT * FROM bank_card WHERE person_id = #{personId}
    </select>

    <select id="get" parameterType="int" resultMap="rmList">
        <include refid="sqlListAll" /> WHERE bc.id = #{id}
    </select>

</mapper>